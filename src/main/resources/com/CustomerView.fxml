<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finalproj.Controller.CustomerController">
    <children>
        <Label layoutX="350.0" layoutY="20.0" text="Quản Lý Khách Hàng" textFill="#2E8B57">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <!-- Bảng hiển thị thông tin khách hàng -->
        <TableView fx:id="customerTable" layoutX="50.0" layoutY="60.0" prefHeight="300.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colCustomerId" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="colCustomerName" text="Tên" prefWidth="150.0" />
                <TableColumn fx:id="colCustomerAddress" text="Địa chỉ" prefWidth="200.0" />
                <TableColumn fx:id="colCustomerPhone" text="SĐT" prefWidth="150.0" />
                <TableColumn fx:id="colCustomerEmail" text="Email" prefWidth="150.0" />
            </columns>
        </TableView>
        <!-- Nút để thêm, sửa, xóa khách hàng -->
        <Button layoutX="150.0" layoutY="400.0" mnemonicParsing="false" text="Thêm" onAction="#handleAddCustomer" prefWidth="100.0" />
        <Button layoutX="350.0" layoutY="400.0" mnemonicParsing="false" text="Sửa" onAction="#handleEditCustomer" prefWidth="100.0" />
        <Button layoutX="550.0" layoutY="400.0" mnemonicParsing="false" text="Xóa" onAction="#handleDeleteCustomer" prefWidth="100.0" />
    </children>
</AnchorPane>

